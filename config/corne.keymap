#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        kp_tap: kp_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "KP_TAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <400>;
            quick-tap-ms = <200>;
            flavor = "tap-preferred";
        };

        new_behavior: new_behavior {
            compatible = "zmk,behavior-hold-tap";
            label = "NEW_BEHAVIOR";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <400>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
    };

    combos {
        compatible = "zmk,combos";

        screenshot {
            bindings = <&kp LG(LS(NUMBER_4))>;
            key-positions = <36 17>;
        };

        wholescreenshot {
            bindings = <&kp LG(LS(NUMBER_3))>;
            key-positions = <36 16>;
        };

        emoji {
            bindings = <&kp LC(LG(SPACE))>;
            key-positions = <36 15>;
        };
    };

    macros {
        space_1: space_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(N1)>;
            label = "SPACE_1";
        };

        space_2: space_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(N2)>;
            label = "SPACE_2";
        };

        space_3: space_3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(N3)>;
            label = "SPACE_3";
        };

        space_4: space_4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(N4)>;
            label = "SPACE_4";
        };

        tab_1: tab_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(N1)>;
            label = "TAB_1";
        };

        tab_2: tab_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(N2)>;
            label = "TAB_2";
        };

        tab_3: tab_3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(N3)>;
            label = "TAB_3";
        };

        tab_4: tab_4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(N4)>;
            label = "TAB_4";
        };

        aero_1: aero_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N1)>;
            label = "AERO_1";
        };

        aero_2: aero_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N2)>;
            label = "AERO_2";
        };

        aero_3: aero_3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N3)>;
            label = "AERO_3";
        };

        aero_4: aero_4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N4)>;
            label = "AERO_4";
        };

        aero_5: aero_5 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N5)>;
            label = "AERO_5";
        };

        aero_6: aero_6 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N6)>;
            label = "AERO_6";
        };

        aero_7: aero_7 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N7)>;
            label = "AERO_7";
        };

        aero_8: aero_8 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N8)>;
            label = "AERO_8";
        };

        lock: lock {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LC(Q))>;
            label = "LOCK";
        };

        window_1: window_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(TAB)>;
            label = "WINDOW_1";
        };

        window_2: windown_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(TAB)>;
            label = "WINDOWN_2";
        };

        window_3: window_3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(GRAVE)>;
            label = "WINDOW_3";
        };

        web_back: web_back {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LEFT_ARROW)>;
            label = "WEB_BACK";
        };

        web_forth: web_forth {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(RIGHT_ARROW)>;
            label = "WEB_FORTH";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp ESCAPE  &kp Q              &kp W  &kp E     &kp R  &kp T        &kp Y                &kp U  &kp I      &kp O    &kp P      &kp BACKSPACE
&kp TAB     &kp A              &kp S  &kp D     &kp F  &kp G        &kp H                &kp J  &kp K      &kp L    &kp SEMI   &kp RALT
&kp LSHFT   &new_behavior 3 Z  &kp X  &kp C     &kp V  &kp B        &kp N                &kp M  &kp COMMA  &kp DOT  &kp SLASH  &kp_tap LG(LC(Q)) ESCAPE
                                      &kp LGUI  &mo 2  &kp SPACE    &kp_tap LCTRL ENTER  &mo 1  &kp RGUI
            >;
        };

        coding {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&trans  &trans  &trans     &trans    &trans    &trans    &trans  &kp LC(C)  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp DOUBLE_QUOTES  &trans
&trans  &trans  &kp LCTRL  &kp LALT  &kp LGUI  &trans    &trans  &kp ESC    &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp BACKSPACE      &trans
&trans  &trans  &trans     &trans    &trans    &trans    &trans  &kp TAB    &kp RIGHT_BRACKET     &kp RIGHT_BRACKET      &kp SINGLE_QUOTE   &trans
                           &trans    &trans    &trans    &trans  &trans     &trans
            >;
        };

        math {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&trans  &kp N1     &kp N2         &kp N3                &kp N4            &kp N5    &kp N6     &kp N7     &kp N8          &kp N9        &kp N0     &trans
&trans  &kp GRAVE  &kp AMPERSAND  &kp LESS_THAN         &kp GREATER_THAN  &trans    &trans     &kp PLUS   &kp MINUS       &kp ASTERISK  &kp SLASH  &trans
&trans  &kp TILDE  &kp QUESTION   &kp NON_US_BACKSLASH  &kp SLASH         &trans    &trans     &kp EQUAL  &kp UNDERSCORE  &trans        &trans     &trans
                                  &trans                &trans            &trans    &kp LSHFT  &kp SPACE  &trans
            >;
        };

        control {
            bindings = <
&trans  &trans  &trans     &trans    &trans    &trans    &trans  &kp C_PLAY_PAUSE      &kp C_VOLUME_DOWN     &kp C_VOLUME_UP  &kp BACKSPACE  &trans
&trans  &trans  &kp LCTRL  &kp LALT  &kp LGUI  &trans    &trans  &kp LEFT              &kp DOWN              &kp UP_ARROW     &kp RIGHT      &trans
&trans  &trans  &trans     &trans    &trans    &trans    &trans  &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &trans           &trans         &trans
                           &trans    &trans    &trans    &trans  &trans                &trans
            >;
        };

        extra_2 { status = "reserved"; };

        extra_3 { status = "reserved"; };
    };
};
